<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      throwConfigExceptions="true">
  <!-- https://nlog-project.org/config/?tab=targets Полезна документация по струтуре targets -->
  <targets>
    <target name="logMainFile"
            xsi:type="File"
            fileName="logs\logMain.txt"
            layout="${longdate}|${message}"
            deleteOldFileOnStartup="true" />
    
    <target name="logReaderFile"
            xsi:type="File"
            fileName="logs\logReader.txt"
            layout="${longdate}|${message}"
            deleteOldFileOnStartup="true" />
    
    <target name="logPrinterFile"
            xsi:type="File"
            fileName="logs\logPrinter.txt"
            layout="${message}"
            deleteOldFileOnStartup="true" />
    
    <target name="logFIFile"
            xsi:type="File"
            fileName="logs\logFlatIdentifier.txt"
            layout="${message}"
            deleteOldFileOnStartup="true" />
    
    <target name="logHFFFile"
            xsi:type="File"
            fileName="logs\logHistoricalFlatFinder.txt"
            layout="${message}"
            deleteOldFileOnStartup="true" />
    
    <target name="logFlatClassifierFile"
            xsi:type="File"
            fileName="logs\logFlatClassifier.txt"
            layout="${message}"
            deleteOldFileOnStartup="true" />
    
    <!-- Цветные консольки *_* -->
    <target name="logMainConsole" 
            xsi:type="ColoredConsole" 
            layout="${message}"
            useDefaultRowHighlightingRules="false" >
            <highlight-row condition="true" foregroundColor="Blue" />
    </target>
    
    <target name="logReaderConsole" xsi:type="ColoredConsole" layout="${message}">
      <highlight-row condition="true"
                     foregroundColor="DarkGreen" />
    </target>
    
    <target name="logPrinterConsole"
            xsi:type="ColoredConsole"
            layout="${message}">
      <highlight-row condition="true"
                     foregroundColor="DarkRed"/>
    </target>
    
    <target name="logFIConsole"
            xsi:type="ColoredConsole"
            layout="${message}">
      <highlight-row condition="true"
                     foregroundColor="Magenta"/>
    </target>
    
    <target name="logHFFConsole"
            xsi:type="ColoredConsole"
            layout="${message}">
      <highlight-row condition="true"
                     foregroundColor="Yellow"/>
    </target>
    
    <target name="logFlatClassifierConsole"
            xsi:type="ColoredConsole"
            layout="${message}">
      <highlight-row condition="true"
                     foregroundColor="DarkCyan"/>
    </target>
  </targets>

  <rules>
    <logger name="Candles.Program" minlevel="Trace" writeTo="logMainFile" />
    <logger name="Candles.Reader" minlevel="Trace" writeTo="logReaderFile" />
    <logger name="Candles.Printer" minlevel="Trace" writeTo="logPrinterFile" />
    <logger name="Candles.FlatIdentifier" minlevel="Trace" writeTo="logFIFile" />
    <logger name="Candles.HistoricalFlatFinder" minlevel="Trace" writeTo="logHFFFile" />
    <logger name="Candles.FlatClassifier" minlevel="Trace" writeTo="logFlatClassifierFile" />

    <logger name="Candles.Program" minlevel="Trace" writeTo="logMainConsole" />
    <logger name="Candles.Reader" minlevel="Trace" writeTo="logReaderConsole" />
    <logger name="Candles.Printer" minlevel="Trace" writeTo="logPrinterConsole" />
    <!-- <logger name="Candles.FlatIdentifier" minlevel="Trace" writeTo="logFIConsole" /> -->
    <!-- <logger name="Candles.HistoricalFlatFinder" minlevel="Trace" writeTo="logHFFConsole" /> -->
    <logger name="Candles.FlatClassifier" minlevel="Trace" writeTo="logFlatClassifierConsole"/>
  </rules>
</nlog>