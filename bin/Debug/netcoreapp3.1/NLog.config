<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      throwConfigExceptions="true">
  <!-- https://nlog-project.org/config/?tab=targets Полезна документация по струтуре targets -->
  <targets>
    <target name="logMainFile"
            xsi:type="File"
            fileName="logs\logMain.txt"
            layout="${longdate}|${message}" />
    
    <target name="logReaderFile"
            xsi:type="File"
            fileName="logs\logReader.txt"
            layout="${longdate}|${message}" />
    
    <target name="logPrinterFile"
            xsi:type="File"
            fileName="logs\logPrinter.txt"
            layout="${message}" />
    
    <target name="logFIFile"
            xsi:type="File"
            fileName="logs\logFlatIdentifier.txt"
            layout="${message}" />
    
    <target name="logHFFFile"
            xsi:type="File"
            fileName="logs\logHistoricalFlatFinder.txt"
            layout="${message}" />
    
    <!-- Цветные консольки *_* -->
    <target name="logMainConsole" 
            xsi:type="ColoredConsole" 
            layout="${message}"
            useDefaultRowHighlightingRules="false" >
            <highlight-row condition="true" foregroundColor="Blue" />
    </target>
    
    <target name="logReaderConsole" xsi:type="ColoredConsole" layout="${message}">
      <highlight-row condition="true"
                     foregroundColor="DarkGreen" />
    </target>
    
    <target name="logPrinterConsole"
            xsi:type="ColoredConsole"
            layout="${message}">
      <highlight-row condition="true"
                     foregroundColor="DarkRed"/>
    </target>
    
    <target name="logFIConsole"
            xsi:type="ColoredConsole"
            layout="${message}">
      <highlight-row condition="true"
                     foregroundColor="Magenta"/>
    </target>
    
    <target name="logHFFConsole"
            xsi:type="ColoredConsole"
            layout="${message}">
      <highlight-row condition="true"
                     foregroundColor="Gray"/>
    </target>
  </targets>

  <rules>
    <logger name="Lua.Program" minlevel="Trace" writeTo="logMainFile" />
    <logger name="Lua.Reader" minlevel="Trace" writeTo="logReaderFile" />
    <logger name="Lua.Printer" minlevel="Trace" writeTo="logPrinterFile" />
    <logger name="Lua.FlatIdentifier" minlevel="Trace" writeTo="logFIFile" />
    <logger name="Lua.HistoricalFlatFinder" minlevel="Trace" writeTo="logHFFFile" />

    <logger name="Lua.Program" minlevel="Trace" writeTo="logMainConsole" />
    <logger name="Lua.Reader" minlevel="Trace" writeTo="logReaderConsole" />
    <logger name="Lua.Printer" minlevel="Trace" writeTo="logPrinterConsole" />
    <logger name="Lua.FlatIdentifier" minlevel="Trace" writeTo="logFIConsole" />
    <logger name="Lua.HistoricalFlatFinder" minlevel="Trace" writeTo="logHFFConsole" />
  </rules>
</nlog>